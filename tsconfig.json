{
  "compilerOptions": {
    "target": "ES2022",                  // Modern JS target
    "module": "ES2022",                  // Use ESM to match "type": "module"
    "moduleResolution": "bundler",       // Required for ESM with TypeScript
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true   // So you can import like "./file.ts"
  }
}
